<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="Styles.css">
    <link rel="stylesheet" href="oldhp.css">
</head>
<body class="bodyc">
    <!-- Header -->
    <header>
        <div id="mySidepanel" class="sidepanel">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="/about">About</a>
            <a href="/charts">Charts</a>
            <a href="/games">Games</a>
            <button onclick="openSignUpModal()" style="font-family: 'Times New Roman', serif; font-size: 30px; text-align: left;">Sign Up</button>
            <button onclick="openLoginModal()" style="font-family: 'Times New Roman', serif; font-size: 30px; text-align: left;">Login</button>
        </div>
    </header>

    <!-- Background Image with Navigation Button -->
    <div class="top-img">
        <button class="openbtn" onclick="openNav()">&#9776;</button>
        <div class="strokeme">
            <h1 class ="h1">Homepage</h1>
        </div>
      
    </div>

    <!-- Horizontal Line -->
    <hr class="rounded">

    <!-- Sign Up Modal -->
    <div id="signUpModal" class="modal">
        <span onclick="closeSignUpModal()" class="close" title="Close Modal">&times;</span>
        <form class="modal-content" action="/signup" method="post" onsubmit="return validateInfo();">
            <div class="container">
                <!-- SIGN UP FORM -->
                <h1 class="login-signup-text" style="text-align: left;">Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                <label for="newUsername"><b>Username or email</b></label>
                <input type="text" placeholder="Enter Username" name="newUsername" required>
                <label for="secret"><b>Secret Message</b></label>
                <input type="text" placeholder="Enter Secret Message" name="secret" required>
                <label for="newPassword"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="newPassword" required>
                <label for="passwordRepeat"><b>Repeat Password</b></label>
                <input type="password" placeholder="Repeat Password" name="passwordRepeat" required>
                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom: 15px;"> Remember me
                </label>
                <p>By creating an account you agree to our <a href="/terms_and_conditions" style="color: dodgerblue;">Terms & Conditions</a>.</p>
                <div class="clearfix">
                    <button type="button" onclick="closeSignUpModal()" class="cancelbtn">Cancel</button>
                    <button type="submit" class="signup">Sign Up</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Login Modal -->
    <div id="loginModal" class="modal">
        <!-- Login Modal Content -->
        <span onclick="closeLoginModal()" class="close" title="Close Modal">&times;</span>
        <form class="modal-content" action="/login" method="post" onsubmit="return validateLogin();">
            <div class="container">
                <h1 class="login-signup-text">Login</h1>
                <label for="username"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="username" required>
                <label for="password"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" id="passwordId" required>
                <button type="submit" class="login-btn">Login</button>
                <label>
                    <input type="checkbox" onclick="showPassword()">Show Password
                </label>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>
        </form>
    </div>
    <div class="bot-img">
        <!-- Main content -->
        <div class="about-container">
            <!-- About Section -->
            <section class="about-section">
                <h1>What we offer or are offering in the future</h1>
                <p></p>
                <img src="cheese.ico" alt="About Us" class="about-image">
            </section>

            <!-- Insertable Slots -->
            <section class="insertable-slot">
                <h2>The only cheese streaming service</h2>
                <!-- Insert your content here -->
            </section>

            <section class="insertable-slot">
                <h2>idk a login ig</h2>
                <!-- Insert your content here -->
            </section>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2023 Your Website Name
    </footer>

    <script>
      
        function validateInfo() {
            var psw1 = document.getElementsByName("newPassword")[0].value;
            var psw2 = document.getElementsByName("passwordRepeat")[0].value;
            if (psw1 !== psw2) {
                alert("Passwords don't match!");
                return false;
            }
            return true;
        }
        
        function validateLogin() {
            // Add login validation logic here if needed
            return true;
        }
        
        function showPassword() {
            var x = document.getElementById("passwordId");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        
        function openNav() {
            document.getElementById("mySidepanel").style.width = "250px";
        }
        
        function closeNav() {
            document.getElementById("mySidepanel").style.width = "0";
        }
        
        function openSignUpModal() {
            document.getElementById('signUpModal').style.display = 'block';
        }
        
        function closeSignUpModal() {
            document.getElementById('signUpModal').style.display = 'none';
        }
        
        function openLoginModal() {
            //if (rememberMe){
            //    window.location.href="/loggedin";
            //} 
            document.getElementById('loginModal').style.display = 'block';
            
        }
        
        function closeLoginModal() {
            document.getElementById('loginModal').style.display = 'none';
        }
    </script>
</body>
</html>